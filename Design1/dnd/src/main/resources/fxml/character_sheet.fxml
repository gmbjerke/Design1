<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.yourcompany.dnd.controller.CharacterSheetController">
    <GridPane>
        <Label text="Character Name" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="characterNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Player Name" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="playerNameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Class" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ComboBox<String> fx:id="classComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <!-- Populate classComboBox programmatically with available class options -->

        <!-- Numeric stat blocks -->
        <!-- Define similar elements for other stats -->

        <Label text="HP" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="hpField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Temporary HP" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="tempHpField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <!-- Initiative -->
        <Label text="Initiative" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextField fx:id="initiativeField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

        <!-- Text entry portions -->
        <Label text="Attacks" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <TextArea fx:id="attacksArea" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

        <Label text="Spells" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
        <TextArea fx:id="spellsArea" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

        <Label text="Inventory" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <TextArea fx:id="inventoryArea" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

        <Label text="Notes" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <TextArea fx:id="notesArea" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
    </GridPane>
</AnchorPane>